var datbaseByteCode = "";

var dataBaseContractAddress = "0xe0732000508710a4d772f3e5e0079be6a8918772";

var Web3 = require('web3');
if (typeof web3 !== 'undefined') {
  web3 = new Web3(web3.currentProvider);
} else {
  // set the provider you want from Web3.providers
  web3 = new Web3(new Web3.providers.HttpProvider("http://10.0.0.21:8545"));
}

var account = "0x00c155DA9fdadaa360585F35D1FB4362d810f938";
// rest services
app.get('/', function(req, res) {
  if(web3.isConnected()){
    res.send("Ethereum is connected");
  }else{
    res.send("Ethereum  is not connected");
  }
});

//getting all products
app.get('/getAllProducts', function(req,res){
    var products = [];
    var databaseContract = web3.eth.contract(databaseABI).at(dataBaseContractAddress);

    databaseContract.getAllStoredProduct.call({from: account}, function(err, prdAddress) {
        if(err){
          res.status(401).json("Error databse " + err);
        } else if(prdAddress !=null && prdAddress != undefined){
          for(var i=0 ; i < prdAddress.length ; i++){
            var prodContract = web3.eth.contract(productABI).at(prdAddress[i]);
            prodContract.getProductInfo.call({from: account}, function(err,result){
              if(err){

                  res.status(401).json({"status":false});
              }else if(result!=undefined && result!=null){
                  products.push(result);
                  if(prdAddress.length == products.length){
                    // res.status(200).json({"data":products});
                    res.status(200).json({"status":true,"data":products});
                  }
              }
            });
        }
    }
  });
});

app.get("/getAllParties", function(req,res){
  var allPartyDetails = [];
  var databaseContract = web3.eth.contract(databaseABI).at(dataBaseContractAddress);
    databaseContract.getAllStoredParty.call({from: account}, function(err, partyAddr) {
      if(err){
        res.status(401).json({"status":false});
      }else if(partyAddr !=null || partyAddr != undefined){
          partyLength = partyAddr.length;
            for(var i=0 ; i < partyAddr.length ; i++){
                  var partyContract = web3.eth.contract(partyABI).at(partyAddr[i]);
                  partyContract.getAllInfo.call({from:account},function(err,partyResult){
                    if(err){
                      res.status(401).json({"status":false});

                    }else if(partyResult !=null || partyResult != undefined){
                          allPartyDetails.push(partyResult);
                          if(allPartyDetails.length == partyAddr.length){
                            res.status(200).json({"status":true,"data":allPartyDetails});

                          }
                        }
                  });
            }
        }
  });
});
app.post('/creteNewProduct',function(res,req){
  var pId = res.body._id;
  var pName = res.body._name;
  var pQunt = res.body._quntity;
  var pPrice = res.body._price;
  var pDate = res.body._date;
  var mfId = res.body._mID;

  var productContract = web3.eth.contract(productABI);
  productContract.new(pId, pName, pPrice, pQunt, pDate, mfId, {from: account, data: productByteCode, gasPrice: 20000000000}, function(err, result){
    if(err) {
      res.status(401).json({"status":false});
    } else {
      if(result != null) {
        if(result.address != undefined) {
          res.status(200).json({"status":false,"data":result.address});
        }
      }
    }
  });
});

app.post('/createNewParty', function(res,req){
  var productAddress = res._productAddress;
  var partyId = res._partyId;
  var partyType = res._type;
  var price = res._price;
  var date = res._date;

  var partyContract = web3.eth.contract(partyABI);
  partyContract.new(partyType, partyId, price, date, productAddress,  {from: account, data: partyByteCode, gasPrice: 20000000000}, function(err, result){
    if(err){
      res.status(401).json({"status":false});
    } else {
      if(result != null) {
        if(result.address != undefined) {
          res.status(200).json({"status":false,"data":result.address});
        }
      }
    }
  });


});
app.post('/saveProduct', function(res,req){
  var productAddress = res.body_address;

  var dataBaseContract = web3.eth.contract(databaseABI).at(dataBaseContractAddress);
  dataBaseContract.storeProduct.sendTransaction(productAddress, {from: account}, function(err, result) {
    if(err) {
        res.status(401).json({"status":false});
    }
    if (result) {
        res.status(200).json({"status":false,"data":result});
    }
  });
});

app.post('/saveParty', function(res,req){
  var partyAddress = res.body_address;

  var dataBaseContract = web3.eth.contract(databaseABI).at(dataBaseContractAddress);
  dataBaseContract.storeParty.sendTransaction(partyAddress, {from: account}, function(err, result) {
    if(err) {
        res.status(401).json({"status":false});
    }
    if (result) {
        res.status(200).json({"status":false,"data":result});
    }
  });
});

app.listen(3000, function() {
    console.log('app running on port : 3000');
});

console.log('Supplychain RESTful API server started on: 3000');
